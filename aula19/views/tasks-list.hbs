<!DOCTYPE html>
<html>
    <head>
        <title>Tasks</title>
        <meta charset="utf-8">
    </head>
    <body>
        <!-- Header -->
        <a href="/"> Home </a>
        <a href="tasks"> Tasks </a>

        <table border="true">
            <tr>
                <th>Identifier</th>
                <th>Text</th>
            </tr>
            {{#each tasks}}
                <tr>
                    <td><a href="tasks/{{id}}">{{id}}</a> </td>
                    <td>{{text}}</td>
                </tr>
            {{/each}}

        </table>
        <form method="Post" action="/tasks">
            <label for="textInput">Text:</label>
            <input type="text" id="textInput" name="text">
            <input type="submit" >
        </form>
        <!-- Footer -->
        <p>Chelas 2021</p>

    </body>
</html>